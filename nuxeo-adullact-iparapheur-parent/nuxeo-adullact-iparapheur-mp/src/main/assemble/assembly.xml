<project name="nuxeo-assembly"
         default="build"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />

  <target name="init" unless="init.done">
    <property name="outdir" value="${maven.project.build.directory}" />
    <property name="marketplace" value="${outdir}/marketplace" />
    <property name="init.done" value="true" />
  </target>

  <target name="build" depends="init" description="Build iParapheur integration Markeplace Package">
    <echo>Building iParapheur integration Markeplace Package</echo>
    <delete failonerror="false" dir="${marketplace}" />
    <mkdir dir="${marketplace}" />
    <antcall target="build-standard" />
  </target>

  <target name="build-standard"
          depends="init">

    <copy todir="${marketplace}">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${maven.project.version}" />
      </filterset>
    </copy>

    <copy todir="${marketplace}/install/bundles" overwrite="true">
      <artifact:resolveFile key="org.nuxeo.adullact:nuxeo-adullact-iparapheur-jaxws::jar" />
      <artifact:resolveFile key="nuxeo-studio:adullact-nux::jar" />
    </copy>

    <!--copy todir="${marketplace}/install/lib" overwrite="true">
      <artifact:resolveFile key="commons-discovery:commons-discovery::jar" />
      <artifact:resolveFile key="axis:axis-wsdl4j::jar" />
      <artifact:resolveFile key="org.apache.axis:axis-jaxrpc::jar" />
      <artifact:resolveFile key="org.apache.axis:axis-saaj::jar" />
      <artifact:resolveFile key="org.apache.axis:axis::jar" />
    </copy-->

    <zip destfile="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip"
         basedir="${marketplace}" />
    <artifact:attach file="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip"
                     target="${maven.project.groupId}:${maven.project.artifactId}"
                     type="zip" />
  </target>

</project>
